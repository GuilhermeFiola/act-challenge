{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2022",
      "lib": ["ES2022"],
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "./",
      "esModuleInterop": true,
      "strict": true
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts"],
    "exclude": ["node_modules"]
  }